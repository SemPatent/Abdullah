<UserControl x:Class="Practicals_2014.Pages.WelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" d:DesignWidth="300" Height="481.667">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <!-- TODO: set @SelectedSource -->


        <mui:ModernTab Layout="List" SelectedSource="/Pages/PatentsFromDB.xaml" Grid.ColumnSpan="2">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Patents From Local DB" Source="/Pages/PatentsFromDB.xaml" />
                <mui:Link DisplayName="Patents From The Web" Source="/Pages/PatentsFromWeb.xaml" />
                <mui:Link DisplayName="Process Results" Source="/Pages/GetPatentsResult.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>



    </Grid>





</UserControl>
